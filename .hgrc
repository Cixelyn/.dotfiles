[ui]
username=Cory Li <coryli@mit.edu>
ignore = ~/.hgignore_global
editor = vim

[alias]
addremove = addremove -s 90
defaultrepo = !echo "[paths]\ndefault = $1" >> ./.hg/hgrc

[pager]
pager = less
ignore = version, help, update, serve, record

[progress]
delay = 0

[extdiff]
cmd.kdiff3 =

[merge-tools]
kdiff3.args = $base $local $other -o $output

[extensions]
hgext.extdiff =
color =
churn =
progress =
fetch =
graphlog =
pager =
mq =
shelve =
rebase =
convert =
purge =
hggit = 
